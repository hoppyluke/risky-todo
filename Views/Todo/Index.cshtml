@model List<Todo>

<h1>My Tasks</h1>
<p>
    <a asp-action="Create">New task</a>
    &nbsp;<a asp-action="Search">Search tasks</a>
</p>

@if(Model.Count > 0)
{
    <ul>
        @foreach(var task in Model)
        {
            <li @(task.IsComplete ? "class=done" : "")>@task.Name</li>
        }
    </ul>
    
}
else
{
    <p>You don't have any tasks. Take the day off! (Or maybe add some tasks?)</p>
}