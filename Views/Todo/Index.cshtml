@model List<Todo>
@inject UserManager<ApplicationUser> UserManager

<h1>My Tasks</h1>
<p>
    <em>Logged in as @UserManager.GetUserName(User)</em>
</p>
<p>
    <a asp-action="Create">New task</a>
</p>

@if(Model.Count > 0)
{
    <ul>
        @foreach(var task in Model)
        {
            <li @(task.IsComplete ? "class=done" : "")>@task.Name</li>
        }
    </ul>
    
}
else
{
    <p>You have no tasks yet.</p>
}